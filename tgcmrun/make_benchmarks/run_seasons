#!/bin/tcsh
#
# Make tiegcm "seasonal" benchmark runs (equinox,solstice, smin,smax)
# (This script will override environment settings for TGCMTEMP and 
#  TIEGCM_ROOT as used by tgcmrun)
#
  set home      = /glade/p/hao/tgcm/tiegcm_benchmarks
  set modelroot = $home/tiegcm_trunk
  set tgcmrun   = $home/tiegcm_trunk/tgcmrun/tgcmrun
  set queue     = regular
  set submit    = yes
#
#- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
#
# TIEGCM 5.0-deg res: 
#
 set res = 5.0
 set model     = tiegcm_res${res}
 set benchmark = ${model}_seasons
 set stdoutdir = $home/$benchmark
 set execdir   = $home/$benchmark
 set histdir   = ../hist          # if not abs path, then relative to execdir
 
 set runname = decsol_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir

 set runname = decsol_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = junsol_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = junsol_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = mareqx_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = mareqx_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = sepeqx_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = sepeqx_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
# 
#- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
#
# TIEGCM 2.5-deg res:
#
 set res = 2.5
 set model     = tiegcm_res${res}
 set benchmark = ${model}_seasons
 set stdoutdir = $home/$benchmark
 set execdir   = $home/$benchmark
 set histdir   = ../hist          # if not abs path, then relative to execdir
 
 set runname = decsol_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
  
 set runname = decsol_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = junsol_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = junsol_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = mareqx_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = mareqx_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = sepeqx_smax ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir
 
 set runname = sepeqx_smin ; set case = ${model}_${runname}
 $tgcmrun -q $queue -run_name $runname -model_name tiegcm -model_res $res -model_root $modelroot \
   -submit $submit -stdout_dir $stdoutdir/$case/stdout -execdir $execdir/$case/exec -hist_dir $histdir

#- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
