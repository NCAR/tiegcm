#!/bin/tcsh

set mycwd = `pwd`
set model = tiegcm2.0
#
# Save source download:
#
set source_home = /glade/p/hao/tgcm/tiegcm_benchmarks
cd $source_home
set tarfile = $model.tar
tar -cf $tarfile tiegcm_trunk
gzip $tarfile
mv $tarfile.gz $mycwd
echo Saved $tarfile.gz in $mycwd
#
# Save data download:
#
set data_home = /glade/p/hao/tgcm/data
cd $data_home
set tarfile = ${model}_data.tar
tar -cf $tarfile $model
gzip $tarfile
mv $tarfile.gz $mycwd
echo Saved $tarfile.gz in $mycwd
